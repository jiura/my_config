	local keys = vim.api.nvim_replace_termcodes("<C-o>b", false, false, true)
	vim.api.nvim_feedkeys(keys, "n", true)
	local new_line_num
	vim.defer_fn(function()
		new_line_num = vim.api.nvim_win_get_cursor(0)[1]
